<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_caracteristique_evt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ghassen.myapplication.Caracteristique_evt">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text="Détails du hackathon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40px"
            android:id="@+id/textView13"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px">

            <TextView
                android:text="Nom"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:layout_marginBottom="40px"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dev Fest"
                android:ems="10"
                android:id="@+id/t_name"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px">

            <TextView
                android:text="Date de début"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginBottom="40px"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02/12/2017"
                android:ems="10"
                android:id="@+id/t_deb"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px">

            <TextView
                android:text="Date de fin"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_marginBottom="40px"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03/12/2017"
                android:ems="10"
                android:id="@+id/t_fin"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px">

            <TextView
                android:text="A propos"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_marginBottom="40px"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informations"
                android:ems="10"
                android:id="@+id/t_prop"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px">

            <TextView
                android:text="Programme"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_marginBottom="40px"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voir le programme"
                android:ems="10"
                android:id="@+id/t_prog"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px">

            <TextView
                android:text="Localisation"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_marginBottom="40px"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Route Mharza KM 1.5"
                android:ems="10"
                android:id="@+id/t_loc"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px">

            <TextView
                android:text="Prix de participation"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_marginBottom="40px"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 DT"
                android:ems="10"
                android:id="@+id/t_prix"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px">

            <Button
                android:text="Interessé"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/b_inter"
                android:layout_marginBottom="40px"
                android:layout_weight="1.04"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:text="Créer une équipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/b_creer"
                android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal|bold" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
